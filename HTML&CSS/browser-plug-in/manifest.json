{
  "manifest_version": 2,
  "name": "摸鱼时间统计器",
  "version": "1.0",
  "description": "统计用户浏览指定网站的时间",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "<all_urls>",
    "scripting"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "styles.css"
  ]
}